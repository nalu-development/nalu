<Project>

  <PropertyGroup Label="Build">
    <LangVersion>latest</LangVersion>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <AnalysisLevel>latest</AnalysisLevel>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <MauiVersion8>8.0.82</MauiVersion8>
    <MauiVersion9>9.0.10</MauiVersion9>
    <AllTargetFrameworks>net8.0;net8.0-android;net8.0-ios17.0;net8.0-maccatalyst;net9.0;net9.0-android;net9.0-ios18.0;net9.0-maccatalyst</AllTargetFrameworks>
    <AllTargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(AllTargetFrameworks);net8.0-windows10.0.19041.0;net9.0-windows10.0.19041.0</AllTargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Label="Package">
    <Authors>Alberto Aldegheri</Authors>
    <Company />
    <Copyright>Copyright Â© Alberto Aldegheri. All rights Reserved</Copyright>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://nalu-development.github.io/nalu/</PackageProjectUrl>
    <PackageIcon>Icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/nalu-development/nalu.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>https://github.com/nalu-development/nalu/releases</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Label="Package References">
    <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" PrivateAssets="all" Version="17.9.28" />
    <PackageReference Include="MinVer" PrivateAssets="all" Version="4.3.0" />
  </ItemGroup>

</Project>
