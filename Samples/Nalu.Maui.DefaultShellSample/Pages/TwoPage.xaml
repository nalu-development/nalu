<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Nalu.Maui.Sample.PageModels"
             x:Class="Nalu.Maui.Sample.Pages.TwoPage"
             x:DataType="pageModels:TwoPageModel"
             Title="Page Two"
             Padding="16">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="16">
            <Label Text="Page Two" FontSize="Title" Margin="0,16" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Instance: "/>
                        <Span Text="{Binding InstanceCount}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
