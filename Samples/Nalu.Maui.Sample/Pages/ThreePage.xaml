<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Nalu.Maui.Sample.PageModels"
             xmlns:pageModels1="clr-namespace:Nalu.Maui.Sample.PageModels"
             x:Class="Nalu.Maui.Sample.Pages.ThreePage"
             x:DataType="pageModels1:ThreePageModel"
             Title="Page Three"
             Padding="16">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="16">
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Instance: "/>
                        <Span Text="{Binding InstanceCount}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Command="{Binding PushFourCommand}"
                    Text="Push Four"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
