<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Nalu.Maui.Sample.PageModels"
             xmlns:pageModels1="clr-namespace:Nalu.Maui.Sample.PageModels"
             x:Class="Nalu.Maui.Sample.Pages.OnePage"
             x:DataType="pageModels1:OnePageModel"
             Title="Page One"
             Padding="16">

    <ScrollView>
        <VerticalStackLayout Spacing="16">
            <Image Source="banner.png"
                   HeightRequest="128"
                   Aspect="AspectFit"
                   Margin="0,16,0,24"/>

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Instance: "/>
                        <Span Text="{Binding InstanceCount}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Button Command="{Binding PushThreeCommand}"
                    Text="Push Three"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
