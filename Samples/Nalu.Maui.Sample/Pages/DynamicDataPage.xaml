<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Nalu.Maui.Sample.PageModels"
             xmlns:nalu="https://nalu-development.github.com/nalu/layouts"
             xmlns:vs="https://nalu-development.github.com/nalu/virtualscroll"
             x:Class="Nalu.Maui.Sample.Pages.DynamicDataPage"
             x:DataType="pageModels:DynamicDataPageModel"
             Title="DynamicData Page">
    <ContentPage.Resources>
        <DataTemplate x:DataType="pageModels:DynamicDataItem" x:Key="ItemTemplate">
            <nalu:ViewBox>
                <Border Shadow="{OnPlatform WinUI={x:Null}, Default={Shadow Radius=6, Opacity=0.2, Offset='1,1'}}"
                        StrokeShape="RoundRectangle 8"
                        Margin="8"
                        Padding="16,8"
                        BackgroundColor="LightCoral">
                    <Label Text="{Binding Name}"/>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddLineCommand}"/>
                    </Border.GestureRecognizers>
                </Border>
            </nalu:ViewBox>
        </DataTemplate>
        <DataTemplate x:DataType="pageModels:DynamicDataItem" x:Key="ItemTemplateExpanded">
            <nalu:ViewBox>
                <Border Shadow="{OnPlatform WinUI={x:Null}, Default={Shadow Radius=6, Opacity=0.2, Offset='1,1'}}"
                        StrokeShape="RoundRectangle 8"
                        Margin="8"
                        Padding="16,8"
                        MinimumHeightRequest="200"
                        BackgroundColor="LightCoral">
                    <Label Text="{Binding Name}"/>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddLineCommand}"/>
                    </Border.GestureRecognizers>
                </Border>
            </nalu:ViewBox>
        </DataTemplate>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid IgnoreSafeArea="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <nalu:HorizontalWrapLayout Grid.Row="0" 
                  Padding="16,8"
                  HorizontalSpacing="8">
                <Button Text="Reload"
                        Command="{Binding ReloadItemCommand}" />
                <Button Text="Add"
                        Command="{Binding AddItemCommand}" />
                <Button Text="Remove"
                        Command="{Binding RemoveItemCommand}" />
                <Button Text="Move"
                        Command="{Binding MoveItemCommand}" />
                <Button Text="Scroll"
                        Command="{Binding ScrollToItemCommand}" />
                <Button Text="Auto"
                        Command="{Binding ToggleAutoChangesCommand}" />
                <Button Text="Clear"
                        Command="{Binding ClearItemsCommand}" />
                <Button Text="Replace"
                        Command="{Binding ReplaceItemsCommand}" />
            </nalu:HorizontalWrapLayout>

            <vs:VirtualScroll Grid.Row="1"
                                x:Name="VirtualScroll"
                                ItemsSource="{Binding Items}"
                                IsRefreshEnabled="True"
                                FadingEdgeLength="32"
                                RefreshCommand="{Binding RefreshCommand}"
                                RefreshAccentColor="CornflowerBlue">
                <vs:VirtualScroll.HeaderTemplate>
                    <DataTemplate x:DataType="pageModels:DynamicDataPageModel">
                        <VerticalStackLayout>
                            <Image Source="banner.png"
                                   HeightRequest="128"
                                   Aspect="AspectFit"
                                   Margin="0,16,0,24" />
                        
                            <Label Text="DynamicData Page"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </vs:VirtualScroll.HeaderTemplate>
                <vs:VirtualScroll.FooterTemplate>
                    <DataTemplate x:DataType="pageModels:DynamicDataPageModel">
                        <VerticalStackLayout Padding="16, 8">
                            <Label Text="{Binding Message}"
                                   FontSize="18"
                                   HorizontalOptions="Center" />
                
                            <Label Text="{Binding InstanceCount, StringFormat='Instance: {0}'}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </vs:VirtualScroll.FooterTemplate>
                <vs:VirtualScroll.ItemTemplate>
                    
                </vs:VirtualScroll.ItemTemplate>
            </vs:VirtualScroll>
        </Grid>
    </ContentPage.Content>
</ContentPage>

