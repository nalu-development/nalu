<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Nalu.Maui.Sample.PageModels"
             xmlns:nalu="https://nalu-development.github.com/nalu"
             x:Class="Nalu.Maui.Sample.Pages.FivePage"
             x:DataType="pageModels:FivePageModel"
             Title="Page Five"
             Padding="16">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="16">
            <Label Text="Page Five" FontSize="Title" Margin="0,16" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Instance: "/>
                        <Span Text="{Binding InstanceCount}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Command="{nalu:NavigateCommand}"
                    Text="Go to /One/Three/Four">
                <Button.CommandParameter>
                    <nalu:AbsoluteNavigation>
                        <nalu:NavigationSegment x:TypeArguments="pageModels:OnePageModel" />
                        <nalu:NavigationSegment x:TypeArguments="pageModels:ThreePageModel" />
                        <nalu:NavigationSegment x:TypeArguments="pageModels:FourPageModel" />
                    </nalu:AbsoluteNavigation>
                </Button.CommandParameter>
            </Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
