<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Nalu.Maui.Sample.PageModels"
             xmlns:nalu="https://nalu-development.github.com/nalu"
             xmlns:pageModels1="clr-namespace:Nalu.Maui.Sample.PageModels"
             x:Class="Nalu.Maui.Sample.Pages.SixPage"
             x:DataType="pageModels1:SixPageModel"
             Title="Page Six"
             Padding="16">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="16">
            <Label Text="Page Six" FontSize="Title" Margin="0,16" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Instance: "/>
                        <Span Text="{Binding InstanceCount}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Text="One" Command="{Binding GoToOneCommand}" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
