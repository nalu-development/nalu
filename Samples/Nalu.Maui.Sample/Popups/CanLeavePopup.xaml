<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:popupModels="clr-namespace:Nalu.Maui.Sample.PopupModels"
               xmlns:system="clr-namespace:System;assembly=System.Runtime"
               x:Class="Nalu.Maui.Sample.Popups.CanLeavePopup"
               x:DataType="popupModels:CanLeavePopupModel"
               x:TypeArguments="system:Boolean">
    <VerticalStackLayout Spacing="16" CompressedLayout.IsHeadless="True" Padding="24,16">
        <Label Text="{Binding Text}" />
        <HorizontalStackLayout CompressedLayout.IsHeadless="True" HorizontalOptions="End" Spacing="16">
            <Button Text="Yes" Clicked="YesOnClicked" />
            <Button Text="No" Clicked="NoOnClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
